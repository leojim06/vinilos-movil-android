<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name"
    app:startDestination="@id/searchFragment">
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.vinilosapp.ui.fragments.AlbumSearchFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_searchFragment_to_artistDetailsFragment"
            app:destination="@id/artistDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.vinilosapp.ui.fragments.AlbumDetailsFragment"
        android:label="@string/album_details_title" />
    <fragment
        android:id="@+id/artistDetailsFragment"
        android:name="com.example.vinilosapp.ui.fragments.ArtistDetailsFragment"
        android:label="ArtistDetailsFragment" />
</navigation>